<main class="recipe" id="fullpage">
	<section class="section hero">
		<div class="container-fluid">
			<div class="row justify-content-center align-items-center">
				<div class="col-md-6">
					<div class="recipe--photo">
						<picture>
							<img src="{{recipe.image}}" alt="Recetas Coronado®">
						</picture>
					</div>
				</div>
				<div class="col-md-6">
					<div class="container">
						<h1 class="tituloH1b">{{recipe.title|raw}}</h1>
						<ul class="topics">
							<li class="timeT">{{recipe.time}}
								min</li>
							<li class="productT">{{recipe.product}}</li>
							<li class="levelT">{{recipe.level}}</li>
						</ul>
						<div class="col-md-12">
							<p>{{recipe.description}}</p>
						</div>
						<div class="row justify-content-center align-items-start">
							<div class="container">
								<a class="btn secondary" href="#ingredients">Ingredientes</a>
								<a class="btn secondary" href="#steps">Preparación</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="section">
		<div class="recipe--ingredientes">
			<div class="container">
				<div class="row justify-content-center align-items-center">
					<div class="col-md-12 text-center">
						<h2 class="titulos">{{recipe.name}}
						</h2>
					</div>
				</div>
				<div class="row justify-content-center align-items-center">
					<div class="col-md-12">
						<ul class="topics">
							<li class="timeT">{{recipe.time}}
								min</li>
							<li class="levelT">{{recipe.level}}</li>
						</ul>
					</div>
				</div>
				<div class="row justify-content-center align-items-center">
					<div class="col-md-12 text-center">
						{% if recipe.ingredients|length >= 1 %}
							<h2 class="tituloH2" id="ingredients">Ingredientes</h2>
							<ul class="ingredientes">
								{% for ingredient in recipe.ingredients %}
									<li>{{ingredient}}</li>
								{% endfor %}
							</ul>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</section>
	{% if recipe.steps|length >= 1 %}
		<section class="section">
			<div class="recipe--steps">
				<div class="container">
					<div class="row justify-content-center align-items-center">
						<div class="col-md-12 text-center">
							<h2 class="tituloH2" id="steps">Prepáralo así</h2>
						</div>
					</div>
					<div class="row justify-content-center align-items-start">
						<div class="col-md-6 text-center">
							<div class="recipe--video">
								<div class="container">
									<div class="row justify-content-center align-items-center">
										<div class="col-md-12">
											{% if recipe.video_link is not empty %}
												<div class="video-btn" data-toggle="modal" data-src="https://www.youtube.com/embed/{{recipe.video_link}}" data-target="#splashVideo"></div>
												<div class="floatImg">
													<picture>
														<img src="https://img.youtube.com/vi/{{recipe.video_link}}/0.jpg" alt="Youtube {{recipe.name}}">
													</picture>
												</div>
											{% else %}
												<div class="floatImg">
													<picture>
														<img src="{{recipe.image_preview}}" alt="{{recipe.name}}">
													</picture>
												</div>
											{% endif %}
										</div>
									</div>
									{# modulos/custom/coronado_recipes/templates/detail.html.twig #}
									<div class="row justify-content-center align-items-center">
										<div class="col-md-4">
											<div class="btn-recipe-s">
												<div id="share-buttons" class="d-flex">
