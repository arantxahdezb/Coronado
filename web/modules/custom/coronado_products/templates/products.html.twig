<main class="productos-grid">
	<section class="hero">
		<h1 class="tituloH1">Productos</h1>
		<div class="container">
			<div class="row"></div>
		</div>
	</section>
	{% if products|length >= 1 %}
		<section class="grid">
			<div class="container grid--wrap">
				<div class="row">
					<div class="col-12">
						<div class="grid--wrap__card">
							{% for product in products %}
								<div class="card">
									<div class="card-body">
										<div class="photo-grid">
											<picture>
												<img src="{{ product.image_preview }}" alt="{{ product.name }}">
											</picture>
										</div>
										<div class="card-topics">
											<a class="" href="/productos/{{product.product_type_url}}/{{ product.url }}" id="producto-{{ product.url }}">
												<h4>{{ product.name }}</h4>
												<p>{{ product.description_preview }}</p>
											</a>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</section>
	{% endif %}
</main>
